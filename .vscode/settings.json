{
	"search.exclude": {
		"out": true,
		"dist": true,
    "node_modules": true,
    "coverage": true,
	},
	// Turn off tsc task auto detection since we have the necessary tasks as npm scripts
	"typescript.tsc.autoDetect": "off",
  "wiz.codePolicies.IAC Configuration": [],
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "files.exclude": {
    ".env": false,
    ".env.*": false,
    ".git": false,
    ".gitignore": false,
    ".npmrc": false,
    ".roomodes": false,
    ".taskmasterconfig": false,
    ".vscode": false,
    ".windsurfrules": false,
    "**/.certs": false,
    "**/.claude": false,
    "**/.cursor": false,
    "**/.env": false,
    "**/.env.*": false,
    "**/.eslint.config.js": false,
    "**/.eslintrc.cjs": false,
    "**/.eslintrc.js": false,
    "**/.eslintrc.json": false,
    "**/.git": false,
    "**/.github": false,
    "**/.gitignore": false,
    "**/.idea": false,
    "**/.npmrc": false,
    "**/.prettierignore": false,
    "**/.prettierrc": false,
    "**/.roo": false,
    "**/.vscode": false,
    "**/.windsurfrules": false,
    "**/*-workspace": false,
    "**/*.roo*": false,
    "**/build": false,
    "**/CLAUDE.md": false,
    "**/coverage": false,
    "**/debug*.log": false,
    "**/dist": false,
    "**/docker-compose.yml": false,
    "**/docker-compose*.yml": false,
    "**/Dockerfile": false,
    "**/eslint.config.js": false,
    "**/jest.config.js": false,
    "**/jest.config.json": false,
    "**/jest.config.ts": false,
    "**/logs": false,
    "**/loki-*.*": false,
    "**/node_modules": false,
    "**/package-lock.json": false,
    "**/tmp": false,
    "**/tsconfig*.*": false,
    "**/typedoc.json": false,
    "node_modules": false,
    "package-lock.json": false,
    "scripts": false,
    "taskfile.yml": false,
    "tasks": false,
    "**/vite**.*": false,
    "**/out": false,
    "**/.taskmaster": false,
    ".github/actions": false,
    ".github": false,
    "webpack.config.js": false,
    "LICENSE": false,
    "CHANGELOG.md": false,
    ".vscodeignore": false
  },
  "servers": {
    "taskmaster-ai": {
      "command": "npx",
      "args": [
        "-y",
        "--package=task-master-ai",
        "task-master-ai"
      ],
      "type": "stdio"
    }
  },
  "terminal.integrated.profiles.osx": {
    "Start": {
      "path": "zsh",
      "color": "terminal.ansiBlue",
      "icon": "play-circle",
      "args": [
        "-c",
        "echo 'Start terminal initialized'; zsh"
      ]
    },
    "Test": {
      "path": "zsh",
      "color": "terminal.ansiYellow",
      "icon": "beaker",
      "args": [
        "-c",
        "echo 'Test terminal initialized'; zsh"
      ]
    },
    "Claude": {
      "path": "zsh",
      "color": "terminal.ansiMagenta",
      "icon": "comment-discussion",
      "args": [
        "-c",
        "echo 'Claude terminal initialized'; zsh"
      ]
    },
    "Tasks": {
      "path": "zsh",
      "color": "terminal.ansiGreen",
      "icon": "tasklist",
      "args": [
        "-c",
        "echo 'Tasks terminal initialized'; zsh"
      ]
    }
  },
  "terminal.integrated.defaultProfile.osx": "Start",
  "terminal.integrated.enablePersistentSessions": true,
  "terminal.integrated.persistentSessionReviveProcess": "onExitAndWindowClose"
}